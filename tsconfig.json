{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "lib": ["es2019"],
  },
  "include": [
    "src/**/*"
  ]
}
